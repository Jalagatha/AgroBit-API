generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  f_name      String
  age         Int
  l_name      String
  phone       String     @unique
  password    String
  productId   Int?
  upDated DateTime? @updatedAt
  dateTime DateTime? @default(now())
  salesId     Int?
  purchasesId Int?
  image       Int?
  title       Title      @default(farmer)
  Product     Product?   @relation(fields: [productId], references: [id])
  Sales       Sales?     @relation(fields: [salesId], references: [id])
  Purchases   Purchases? @relation(fields: [purchasesId], references: [id])
}

enum Title {
  farmer
  owner
  customer
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  price      String
  upDated DateTime? @updatedAt
  categories Category @default(Livestock)
  users      User[]
}

model Sales {
  id       Int       @id @default(autoincrement())
  quantity BigInt?
  price    BigInt?
  itemName String?
  upDated DateTime? @updatedAt
  dateTime DateTime? @default(now())
  users    User[]
}

model Purchases {
  id       Int       @id @default(autoincrement())
  quantity Int
  price    BigInt?
  name     String?
  upDated DateTime? @updatedAt
  date     DateTime? @default(now())
  users    User[]
}

enum Category {
  Poultry
  Livestock
  Vegetables
}
